{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "PMAI-Interactive-Decisioning-Dashboard": {
      "i18n":{
        "sourceLocale":"en-US",
        "locales": {
          "fr":{
            "translation":"src/locale/messages.fr.xlf"
          },
          "sw":{
            "translation":"src/locale/messages.sw.xlf"
          } 
        }
      },
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "localize":true,
            "outputPath": "dist/",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              {
                "glob": "**/*",
                "input": "../node_modules/leaflet/dist/images",
                "output": "leaflet/"
              },
              "src/assets/images",
              "src/assets/data/geojson",
              "src/assets/data/demo",
              "src/assets/data/outcome",
              "src/assets/videos"
            ],
            "styles": [
              "./node_modules/material-design-icons/iconfont/material-icons.css",
              "src/assets/css/style.css",
              "./node_modules/@angular/material/prebuilt-themes/deeppurple-amber.css",
              "src/styles.scss",
              "./node_modules/leaflet/dist/leaflet.css",
              "./node_modules/leaflet.markercluster/dist/MarkerCluster.Default.css",
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/swagger-ui-dist/swagger-ui.css"
            ],
            "scripts": [
              "./node_modules/hammerjs/hammer.min.js",
              "./node_modules/swagger-ui-dist/swagger-ui-bundle.js",
              "./node_modules/swagger-ui-dist/swagger-ui-standalone-preset.js"
            ],
            "i18nMissingTranslation": "warning"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "5mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "development": {
              "localize": false,
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "fr": {
              "localize": ["fr"]
            },
            "sw": {
              "localize": ["sw"]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "PMAI-Interactive-Decisioning-Dashboard:development"
          },
          "configurations": {
            "production": {
              "browserTarget": "PMAI-Interactive-Decisioning-Dashboard:build:production"
            },
            "development": {
              "browserTarget": "PMAI-Interactive-Decisioning-Dashboard:build:development"
            },
            "fr": {
              "browserTarget": "PMAI-Interactive-Decisioning-Dashboard:build:development,fr"
            },
            "sw": {
              "browserTarget": "PMAI-Interactive-Decisioning-Dashboard:build:development,sw"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "PMAI-Interactive-Decisioning-Dashboard:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/assets/images",
              "src/assets/data/geojson",
              "src/assets/data/demo",
              "src/assets/data/outcome",
              "src/assets/videos"
            ],
            "styles": [
              "src/assets/css/style.css",
              "src/styles.scss",
              "./node_modules/bootstrap/dist/css/bootstrap.min.css"
            ],
            "scripts": ["./node_modules/hammerjs/hammer.min.js"]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "PMAI-Interactive-Decisioning-Dashboard:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "PMAI-Interactive-Decisioning-Dashboard:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "PMAI-Interactive-Decisioning-Dashboard"
}
